{
    "manifest_version": 3,
    "name": "Save it",
    "version": "1.0",
    "description": "Store and manage text snippets for easy access.",
    "author": "Abhinav Anand (Atarax)",
    "permissions": [
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png"
    }
  }
  